  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/config-lerna-scopes": "^13.1.0",
    "@microsoft/api-extractor": "^7.18.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "brotli": "^1.3.2",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.4",
    "commitlint-config-gitmoji": "^2.2.5",
    "cross-env": "^7.0.3",
    "cz-customizable": "^6.3.0",
    "delay": "^5.0.0",
    "delay-cli": "^1.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.0",
    "jest": "^27.1.0",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-polyfill-node": "^0.7.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2",
    "zlib": "^1.0.5"
  },
  "lint-staged": {
    "packages/*/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "available": "rimraf packages/*/dist && npm run build && delay 5 && npm run test-dts && delay 5 && npm run build:t && npm run test",
    "build": "node scripts/build.js",
    "build:t": "node scripts/build.js -t",
    "build:t:trace": "node scripts/build.js -t --trace-warnings",
    "commit": "cross-env GIT_COMMIT_TYPE=CZ cz",
    "coverage": "jest --coverage",
    "dev": "node scripts/dev.js",
    "env": "env",
    "format": "prettier --write --parser typescript \"packages/**/*.ts?(x)\"",
    "husky:init": "node scripts/preHuskyInit.js && husky install && node scripts/postHuskyInit.js",
    "install:no-script": "npm install --ignore-scripts",
    "lerna-publish": "rimraf packages/*/dist && npm run build:t && delay 5 && lerna publish",
    "lerna-version": "rimraf packages/*/dist && npm run build:t && delay 5 && lerna version",
    "lint": "eslint --ext .ts packages/*/src/**.ts",
    "postinstall": "npm run husky:init",
    "prepare": "npm run husky:init",
    "release": "standard-version",
    "setup": "lerna bootstrap && npm run husky:init && lerna exec -- npm i",
    "setup:cnpm": "lerna bootstrap --npm-client=cnpm && npm run husky:init && lerna exec -- cnpm i",
    "test": "jest",
    "test-dts": "node scripts/build.js -dt -f esm && npm run test-dts-only",
    "test-dts-only": "tsc -p ./test-dts/tsconfig.json && tsc -p ./test-dts/tsconfig.build.json",
    "tsc": "tsc"
  },
  "version": "0.0.11"
}
